#!/usr/bin/env bash
# This script loops from 1 to 10 and displays "bad luck" at 4th, "good luck" at 8th, and "Best School" for the other iterations

for ((i=0; i<10; i++)); do
    if [ $i -eq 3 ]; then
        echo "bad luck"
    elif [ $i -eq 7 ]; then
        echo "good luck"
    else
        echo "Best School"
    fi
done